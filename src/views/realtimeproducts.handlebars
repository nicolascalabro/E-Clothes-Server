<div class="dashboard">
  <h1 class="dashboard-title">Productos en Tiempo Real</h1>
  <div class="form-container">
    <form id="formProduct" enctype="multipart/form-data" class="product-form">
      <h2>Crear Producto</h2>

      <input type="text" name="title" placeholder="Ingrese titulo" class="form-input" required>
      <input type="text" name="description" placeholder="Ingrese descripcion" class="form-input" required>
      <input type="text" name="code" placeholder="Ingrese codigo" class="form-input" required>
      <input type="number" name="price" placeholder="Ingrese precio" class="form-input" required>

      <select name="status"class="form-input" required> 
        <option value="True">Disponible</option>
        <option value="False">No Disponible</option>
      </select>
      
      <input type="number" name="stock" placeholder="Ingrese stock" class="form-input" required>

      <select name="category" class="form-input" required> 
        <option value="Remeras">Remeras</option>
        <option value="Buzos">Buzos</option>
        <option value="Camperas">Camperas</option>
        <option value="Pantalones">Pantalones</option>
        <option value="Vestidos">Vestidos</option>
        <option value="Camisas">Camisas</option>
        <option value="Faldas">Faldas</option>
        <option value="Accesorios">Accesorios</option>
        <option value="Calzados">Calzados</option>
        <option value="Chalecos">Chalecos</option>
      </select>

      <button type="submit" class="form-button">Agregar Producto</button>
    </form>
  </div>

  <div class="product-grid" id="productGrid"></div>

</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>