<div class="dashboard">
  <h1 class="dashboard-title">Dashboard</h1>

  {{#with user}}
    <div class="user-info">
      <h2 class="username">{{username}}</h2>
      {{#if isAdmin}}
        <h3 class="admin-message admin-true">Permisos de administrador</h3>
      {{else}}
        <h3 class="admin-message admin-false">No tienes permisos de administrador</h3>
      {{/if}}
    </div>
  {{/with}}

  <div class="form-container">
    <form action="http://localhost:8080/api/products" method="post" enctype="multipart/form-data" class="product-form">
      <h2>Upload Product</h2>
      <input type="text" name="title" id="" placeholder="Insert title" class="form-input" required>
      <input type="text" name="description" id="" placeholder="Insert description" class="form-input" required>
      <input type="text" name="code" id="" placeholder="Insert code" class="form-input" required>
      <input type="number" name="price" id="" placeholder="Insert price" class="form-input" required>
      <fieldset>
        <legend>Status</legend>
        <div>
          <input type="radio" id="id-status-true" name="status" value="true" class="form-input" checked/>
          <label for="id-status-true">True</label>
        </div>
        <div>
          <input type="radio" id="id-status-false" name="status" value="false" class="form-input"/>
          <label for="id-status-false">False</label>
        </div>
      </fieldset>
      <input type="number" name="stock" id="" placeholder="Insert stock" class="form-input" required>
      <select name="category" id="" class="form-input" required> 
        <option value="Buzos">Buzos</option>
        <option value="Camperas">Camperas</option>
      </select>
      <input type="file" name="thumbnailFile" id="" class="form-input" required>
      <button type="submit" class="form-button">Submit Product</button>
    </form>
  </div>

  <div class="product-grid">
    {{#each products}}
      <div class="product-card">
        <img class="product-image" src={{this.thumbnails}} alt="" >
        <h2 class="product-title">{{this.title}}</h2>
        <h3 class="product-price">Precio: {{this.price}}</h3>
      </div>
    {{/each}}
  </div>

</div>